/* pages/equipmentManage/equipmentManage.wxss */
.tableHead{
  padding: 20rpx;
  height: 40rpx;
  display: flex;
  text-align: center;
  font-size: 30rpx;
  background-color: rgb(107,194, 53);
  color: white;
}
.id{
  width:20%
}
.projectName,.equipmentName{
  flex:1;
}
.table{
}
.scroll-view-item{
  display: flex;
  text-align: center;
  line-height: 120rpx;
  height: 120rpx;
  padding: 0 20rpx;
}
.scroll-view-item .index{
  width: 20%;
  height: 120rpx;
  font-size: 28rpx;
}
.scroll-view-item .name{
  flex: 1;
  text-align: center;
}

.container button{
  margin-top: 200rpx;
  color: #fff;
  background-color: #409eff;
  border-color: #409eff;
}
.wrap{
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  opacity: 0;
  animation: show 1s;
}
@keyframes show{
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}
.wrap .box{
  padding: 20rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  border-radius: 10rpx;
  width: 600rpx;
  height: 500rpx;
  background-color: white;
}
.box .title{
  height: 60rpx;
  border-bottom: 1rpx solid #303133;
}
.box .title text{
  font-size: 30rpx;
  color: #303133;
}
.box .name{
  font-size: 24rpx;
  font-weight: bold;
  margin:  20rpx 0;
  height: 60rpx;
  line-height: 60rpx;
}
.close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.close image{
  width: 20rpx;
  height: 20rpx;
}
.ul{
    position: relative;
    height: 72rpx;
    width: 100%;
    line-height: 52rpx;
    border-radius: 4px;
    color: #999;
    font-size: 28rpx;
    padding: 10rpx;
    box-sizing: border-box;
}
.ulBorder{
  border: 1px solid #DCDFE6;
}
.ulBorder1{
  border:1px solid #409EFF; 
}
.ul image{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 10rpx;
  width: 28rpx;
  height: 28rpx;
  transform: rotate(180deg);
  vertical-align: middle;
}
.ul .turntop{
  animation:turnTop 0.5s forwards;
}
.ul .turndown{
  animation:turnDown 0.5s forwards;
}
@keyframes turnTop{
    0%{
      transform: rotate(0)
    }
    100%{
      transform: rotate(180deg)
    }
}
@keyframes turnDown{
    0%{
      transform: rotate(180deg)
    }
    100%{
      transform: rotate(0)
    }
}
.listBox{
  position: absolute;
  top: 240rpx;
  width: 600rpx;
}
.list{
  position: relative;
  margin-top: 24rpx; 
  padding: 12rpx 0;
  border: 1px solid #DCDFE6;
  border-radius: 10rpx;
  background: white;
}
.list .arrow{
    position: absolute;
    top: -10rpx;
    left: 100rpx;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 12rpx;
    border-top-width: 0;
    border-bottom-color: #DCDFE6;
}
.list .arrow::after{
    content: "";
    display: block;
    margin-left: -12rpx;
    position: absolute;
    top: 1rpx;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 12rpx;
    border-top-width: 0;
    border-bottom-color: white;
}
.list .listItem{
  position: relative;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.list .listItem text{
  font-size: 26rpx;
}
.list .listItem image{
  position: absolute;
  right: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
}
.body .btns{
  margin-top: 150rpx;
  display: flex;
}
.body .btns button{
  flex:1;
  margin: 0 10rpx;
  border-radius: 10rpx;
}
.body .btns button:nth-child(1){
  background-color: white;
  border: 1rpx solid #606266;
  color: #606266;
}
.body .btns button:nth-child(2){
  color: white;
  background-color: #409EFF;
  border: 1rpx solid #409EFF;
}
